<openerp>
	<data>




<report
	
	id="report_ticket_receipt_nex"
	
	model="sale.order"
	
	string="Ticket Boleta Nex"
	
	report_type="qweb-pdf"

	name="openhealth.report_ticket_receipt_nex"

	file="openhealth.report_ticket_receipt_nex"

	attachment_use="True"

	attachment="(object.state in ('open','paid')) and
		('INV'+(object.number or '').replace('/','')+'.pdf')"


/>





<template id="report_ticket_receipt_nex">
	<t t-call="report.html_container">
		<t t-foreach="docs" t-as="doc">	
<!--
			<t t-call="report.external_layout">
-->		
			<t>

				<div class="page">
	
	

<!-- Title --> 
<br/>
<center>
<h3>
	Ticket Boleta
</h3>
</center>
<br/>



<!-- My Firm --> 
<br/>
<div class='row'>
<b>	
	<div class='col-xs-12'>		
		<t t-esc="doc.x_my_company.name"/>
	</div>
</b>
</div>


<!-- My Address --> 
<div class='row'>
<b>	
	<div class='col-xs-12'>		
		<t t-esc="doc.x_my_company.x_address"/>
	</div>
</b>
</div>



<!-- My Phone --> 
<div class='row'>
	<div class='col-xs-4'>		
		<b>Telf:</b>
	</div>
	<div class='col-xs-8'>
		<t t-esc="doc.x_my_company.phone"/>
	</div>
</div>



<!-- My Ruc --> 
<div class='row'>
	<div class='col-xs-4'>		
		<b>Ruc:</b>
	</div>
	<div class='col-xs-8'>
		<t t-esc="doc.x_my_company.x_ruc"/>
	</div>
</div>
<br/>





<!-- Authorization --> 
<div class='row'>
	<div class='col-xs-4'>		
		<b>Autorización</b>
	</div>
	<div class='col-xs-8'>
		<t t-esc="doc.x_my_company.x_authorization"/>
	</div>
</div>
<br/>




<!-- Customer --> 
<div class='row'>
	<div class='col-xs-4'>		
		<b>Cliente:</b>
	</div>
	<div class='col-xs-8'>
		<t t-esc="doc.partner_id.name"/>
	</div>
</div>

<!-- DNI --> 
<div class='row'	id='dni'	>
	<div class='col-xs-4'>		
		<b>DNI:</b>
	</div>
	<div class='col-xs-8'>
		<t t-esc="doc.partner_id.x_dni"/>
	</div>
</div>

<!-- Address --> 
<div class='row'>
	<div class='col-xs-4'>		
		<b>Dirección:</b>
	</div>
	<div class='col-xs-8'>
		<t t-esc="doc.partner_id.x_address"/>
	</div>
</div>
<br/>





<!-- Date --> 
<div class='row'>
	<div class='col-xs-4'>		
		<b>Fecha:</b>
	</div>
	<div class='col-xs-8'>
<!--
		<t t-esc="doc.date_order"/>
-->
		<t t-esc="doc.x_date_order_corr"/>
	
	</div>
</div>


<!-- Serial Number --> 
<div class='row'>
	<div class='col-xs-4'>		
		<b>Ticket:</b>
	</div>
	<div class='col-xs-8'>
		<t t-esc="doc.x_serial_nr"/>
	</div>
</div>
<br/>







<!-- Line --> 
<div class='row'>
	<div class='col-xs-12'>
<!--
		<t t-esc="doc.cr"/>
-->
		<h5>--------------------------------------------------------------</h5>
	</div>
</div>


<!-- Description --> 
<b>
<div class='row'>
	<div class='col-xs-4'>
		Descr.
	</div>
	<div class='col-xs-2'>
		Cnt
	</div>
	<div class='col-xs-3'>
		P. Unit.
	</div>
	<div class='col-xs-3'>
		Total
	</div>
</div>
</b>


<!-- Line --> 
<div class='row'>
	<div class='col-xs-12'>
<!--
		<t t-esc="doc.cr"/>
-->
<h5>--------------------------------------------------------------</h5>
	</div>
</div>





<!-- Items --> 
<t t-foreach="doc.order_line" t-as="line">
<div class='row'>
		<div class='col-xs-4'>
			<t t-esc="line.name"/>
		</div>
		<div class='col-xs-2'>
			<t t-esc="line.product_uom_qty"/>
		</div>
		<div class='col-xs-3'>
			<t t-esc="line.price_unit"/>
		</div>
		<div class='col-xs-3'>
			<t t-esc="line.price_subtotal"/>
		</div>
</div>
</t>



<!-- Line --> 
<div class='row'>
	<div class='col-xs-12'>
