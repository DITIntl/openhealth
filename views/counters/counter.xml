<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>


		<!-- Form view -->
		<record model="ir.ui.view" id="counter_form_view">

			<field name="name">counter.form</field>
			
			<field name="model">openhealth.counter</field>

			<!--
			<field name="inherit_id" ref="sale.view_order_form"/>			
	        <field name="mode">primary</field>
	        <field name="priority" eval="1"/>
	        -->

			<field name="arch" type="xml">

				<form string="counter - Form">


					<!-- Header --> 
					<header>
						

						<!-- Reset --> 
						<button 
								name="reset"
								type="object" 
								class="oe_highlight"

								string="Reinicializar"
						/>						



						<!-- Increase --> 
						<button 
								name="increase"
								type="object" 
								class="oe_highlight"

								string="Incrementar"
						/>						

						<!-- Decrease --> 
						<button 
								name="decrease"
								type="object" 
								class="oe_highlight"

								string="Decrementar"
						/>						

					</header>






					<!-- Sheet --> 
					<sheet>

						<h1>Contadores</h1>
						<h2></h2>

						
						<field name="vspace" />
						<field name="vspace"   />													



						<group>
							<group>
								
								<field name="name"   	/>		
								
								<field name="vspace" />
								
								<field name="value"   />													
								
								<field name="vspace" />

<!--								
								<field name="prefix"   />													

								<field name="vspace" />

								<field name="padding"   />													

								<field name="vspace" />

								<field name="total"   />													
-->
							</group>

							<group></group>
						</group>



						<group>
							<group>
								<field name="date_created"  	readonly="1" 	invisible="1"	/>

								<field name="vspace" />

								<field name="date_modified"  	readonly="1" 	invisible="1"	/>
							</group>
							
							<group></group>
						</group>


					</sheet>
				</form>
				
			</field>
		</record>











		<!-- Tree/List view -->
		<!--
		<record model="ir.ui.view" id="base.view_counter_tree">
		-->
		<record model="ir.ui.view" id="openhealth.counter_tree_view">

			<field name="name">openhealth.counter.tree</field>
			<field name="model">openhealth.counter</field>
			<field name="arch" type="xml">
			
			<!--	
			<field name="priority" eval="1"/>
			-->

				<tree string="counter Tree">					

					<field name="name"/>
					<field name="value"/>
					
				</tree>
			</field>
		</record>





		<!-- Window List action -->
		<record model="ir.actions.act_window" id="counter_list_action">
			<field name="name">counters</field>
			<field name="res_model">openhealth.counter</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>

			<!--
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
			
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first counter
				</p>
			</field>
			-->
		</record>








