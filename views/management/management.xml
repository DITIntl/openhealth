<?xml version="1.0"?>
<openerp>
	<data>
		



		<!-- FORM --> 
		<record model="ir.ui.view" id="management_form_view">
			<field name="name">management.form</field>
			
			<field name="model">openhealth.management</field>
			
			<field name="arch" type="xml">

				<form string="Management Form">
					


					<!-- Header -->
					<header>

						<!-- Update -->
						<button 
								type="object" 
								class="oe_highlight"
								name="update_repo"

								string="Actualizar"								
						/>



						<!-- Orders -->
						<button 
								class="oe_highlight"
								type="action" 

								context="{
											'search_default_mananagement_id': active_id,	
										}" 											
								
								name="%(management_order_line_form_action)d" 

								string="Ventas"	
						/>
					</header>







					<!-- Sheet -->	
					<sheet>


						<group	string="Total"	>
							<group>
								<field name="name"/>

								<field name="date_begin"/>

								<field name="date_end"/>

								<field name="write_date"	string="Actualizado"/>
							</group>

							
							<group>
								<field name="total_amount"/>

								<field name="total_count"/>
							</group>
						</group>


						<!-- Notebook --> 
						<notebook>	

							<!-- Orders --> 
							<page	string="Ventas">
<!--
-->
								<field name="order_line">

									<tree string="Ventas"	limit="50"	>	
<!--
										<field name="name"/>
										<field name="state"/>
-->
										<field name="patient"/>

										<field name="doctor"/>

										<field name="x_date_created"/>



										<field name="family"/>

										<field name="sub_family"/>



										<field name="product_id"/>

										<field name="product_uom_qty"/>

										<field name="price_unit"/>

										<field name="price_subtotal"/>
									</tree>
								</field>
<!--
								<field name="order_line"/>
-->
							</page>




							<!-- Doctores --> 
							<page	string="Doctores">

								<field name="doctor_line">
								
									<tree string="Pais"	limit="1000"	>	
										<field name="name"/>

										<field name="x_count"/>
									</tree>
								</field>
							</page>



							<!-- Familias --> 
							<page	string="Familias">

								<field name="family_line">
								
									<tree string="Pais"	limit="1000"	>	
										<field name="name"/>

										<field name="x_count"/>
									</tree>
								</field>
							</page>



							<!-- Sub Familias --> 
							<page	string="Sub Familias">

								<field name="sub_family_line">
								
									<tree string="Pais"	limit="1000"	>	
										<field name="name"/>

										<field name="x_count"/>
									</tree>
								</field>
							</page>







						</notebook>


					</sheet>
				</form>
			</field>
		</record>




		<!-- ACTION - Order -->
		<record model="ir.actions.act_window" id="management_order_list_action">	
			<field name="name">Ventas</field>
			<field name="res_model">openhealth.management</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>

			<field name="domain">[]</field>

			<field name="context">{}</field>

			<!--
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="view_id" eval="False"/>			
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first order
				</p>
			</field>
			-->
		</record>




	</data>
</openerp>
