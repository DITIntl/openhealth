					<!--
					<button 
						type="object" 
						class="oe_highlight"	

						string="Limpiar"
						
						name="clean_order_lines" 	
					/>
					-->
				</field>
				
				
				
				<field name="partner_id" position="after">
					
					<!--
					<field name="consultation"/>
					<field name="x_nex"/>
					<field name="nr_lines"/>

					<field name="x_state"/>
						
					<field name="patient"/>
					-->
					
					
