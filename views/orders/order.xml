		<!-- Form view -->
		<record model="ir.ui.view" id="view_test">

			<field name="name">sale.order.form</field>
			
			<field name="model">sale.order</field>

			<field name="inherit_id" ref="sale.view_order_form"/>			
	        
	        <field name="mode">primary</field>

	        <field name="priority" eval="1"/>
	        
			<field name="arch" type="xml">





				<!--
				<xpath expr="pass of position" position="the postion">
				-->		

				<xpath expr="//button[@name='action_quotation_send']" position="replace">


					<!--
					<button 
							type="object" 
							class="oe_highlight"

							string="Crear Documento de Venta" 

							name="create_sale_document" 
					/>
					-->


					<button 
							attrs="{'invisible':[('x_sales_document', '!=', 'receipt')]}"

							type="object" 
							
							class="oe_highlight"

							string="Crear Boleta" 

							name="create_receipt" 
					/>


					<button 
							attrs="{'invisible':[('x_sales_document', '!=', 'invoice')]}"

							type="object" 

							class="oe_highlight"

							string="Crear Factura" 

							name="create_invoice" 
					/>






					<button 
							attrs="{'invisible':[('x_sales_document', '!=', 'advertisement')]}"

							type="object" 

							class="oe_highlight"

							string="Crear Canje publicidad" 

							name="create_advertisement" 
					/>



					<button 
							attrs="{'invisible':[('x_sales_document', '!=', 'sale_note')]}"

							type="object" 

							class="oe_highlight"

							string="Crear Nota de venta" 

							name="create_sale_note" 
					/>


					<button 
							attrs="{'invisible':[('x_sales_document', '!=', 'ticket_receipt')]}"

							type="object" 

							class="oe_highlight"

							string="Crear Ticket boleta" 

							name="create_ticket_receipt" 
					/>


					<button 
							attrs="{'invisible':[('x_sales_document', '!=', 'ticket_invoice')]}"

							type="object" 

							class="oe_highlight"

							string="Crear Ticket factura" 

							name="create_ticket_invoice" 
					/>






				</xpath>




				<xpath expr="//button[@name='action_confirm']" position="replace">
				</xpath>


				<xpath expr="//button[@name='action_confirm']" position="replace">

					<!--					
					-->
					<button 

							attrs="{'invisible':[
													('receipt', '=', False),

													('x_invoice', '=', False),

													('x_advertisement', '=', False),


													('x_sale_note', '=', False),

													('x_ticket_invoice', '=', False),

													('x_ticket_receipt', '=', False),

													]}"

							type="object" 

							class="oe_highlight"

							string="Confirmar Venta" 

							name="action_confirm" 
					/>

				</xpath>













				<xpath expr="//button[@name='print_quotation']" position="replace">
				</xpath>

				<xpath expr="//button[@name='action_cancel']" position="replace">
				</xpath>



				<!-- Remove -->
				<!--
								context="{
											'default_x_machine: 'none', 
											'x_machine: 'none', 
										}"

				-->
				<xpath expr="//field[@name='name']" position="after">


					<button 
							type="object" 
							class="oe_highlight"
							string="Eliminar" 

							name="remove_myself" 
					/>


					<button 
							type="object" 
							class="oe_highlight oe_right"	
							string="Actualizar"

							name="update_order" 	
					/>
				</xpath>






