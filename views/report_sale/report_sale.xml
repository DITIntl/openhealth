<?xml version="1.0"?>
<openerp>
	<data>
		



<!-- FORM view --> 
		<record model="ir.ui.view" id="report_sale_form_view">

			<field name="name">report.sale.form</field>
			
			<field name="model">openhealth.report.sale</field>
			
			<field name="arch" type="xml">
				
				<form string="report_sale Form">
					



					<header>
						<button 
								type="object" 
								class="oe_highlight"

								name="update_report"

								string="Actualizar"
						/>
					</header>




					<!-- Sheet -->	
					<sheet>


					<group	string="Ventas"	>
						<group>


		                    <field name="name"/>

<!--
		                    <field name="date"/>
-->
		                    <field name="date_begin"/>
		                    <field name="date_end"/>


						</group>
						<group>
<!--							
-->
		                    <field name="total_qty"/>
		                    <field name="total"/>

						</group>
					</group>





						<notebook>
							<page	string="Filtro"	>
								<group>
									<group>
										<field name="categ"		/>
									</group>
									
									<group>
									</group>
								</group>
							</page>
						</notebook>








<!--
						<notebook>
							
							<page	string="Target"	>
								<field name="product_counter_ids"		>
									<tree string=""		default_order="create_date"	>	
						
										<field name="name"		/>

										<field name="qty"		/>

										<field name="total"		/>

									</tree>
								</field>
							</page>
						</notebook>
-->



		                    <field name="vspace"/>


						<notebook>

							<page	string="Ventas"		>
							
								<field name="order_line_ids"		>
									<tree string=""		default_order="create_date"	>	
						
										<field name="product_id"		/>

										<field name="price_unit"		/>

										<field name="product_uom_qty"		/>

										<field name="price_subtotal"		/>

										<field name="x_date_created"	string="Fecha"	/>

<!--
										<field name="name"		/>
-->
									</tree>
								</field>
							</page>
						</notebook>







					</sheet>
				</form>
			</field>
		</record>





		
<!-- TREE view --> 
		
		<record model="ir.ui.view" id="report_sale_tree">

			<field name="name">openhealth.report.sale.tree</field>
			
			<field name="model">openhealth.report.sale</field>
			
			<field name="arch" type="xml">
<!--
				<tree string="Closing Tree">
-->
				<tree default_order='name desc'>
					


                    <field name="name"	 				/>
<!--
                    <field name="date"/>
-->
                    <field name="total_qty"/>
                    <field name="total"/>


				</tree>
			</field>
		</record>






<!-- ACTION -->
		<record model="ir.actions.act_window" id="report_sale_list_action">
			<field name="name">Report de Ventas</field>
			
			<field name="res_model">openhealth.report.sale</field>

			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			
			<!--
            <field name="domain">[]</field>
