<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>



		<!-- SERVICE -->




		<!-- Form view -->
		<record model="ir.ui.view" id="service_form_view">
			<field name="name">service.form</field>
			<field name="model">openhealth.service</field>
			<field name="arch" type="xml">
				
				<form string="Service Form">
					
					
					<sheet>
						<group>
							<group string="Procedimiento">


								<group>
									<field name="name"/>
								</group>
								<group>
								</group>


								<group>
									<field name="id"/>
								</group>
								<group>
								</group>
								

								<group>
									<!--
									<field name="laser" on_change="get_domain_service(laser)" />
									-->
									<field name="laser" on_change="get_domain_service_multi(laser,zone)" />

								</group>
								<group>
								</group>


								<group>
									<!--
									<field name="zone" />
									<field name="zone" on_change="get_domain_service_zone(zone)" />
									<field name="zone" on_change="get_domain_service_zone(laser)" />
									<field name="zone" on_change="get_domain_service_zone(laser,zone)" />
									-->
									<field name="zone" on_change="get_domain_service_multi(laser,zone)" />
								</group>
								<group>
								</group>
								
								

								<group>
									<field name="service"/>
								</group>
								<group>
								</group>


								
								<group>
										<field name="name_short" readonly="1"/>
								</group>
								<group>
								</group>



								<group>
									<field name="price" readonly="1"/>
								</group>
								<group>
								</group>


								<group>
								</group>
								<group>
								</group>


								<group>
									<field name="name" readonly="1" invisible="1"/>
								</group>
								<group>
									<field name="treatment_id" readonly="1" invisible="1"/>
								</group>


								<group>
								</group>
								<group>
								</group>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>



		<!-- service tree/list view -->
		<record model="ir.ui.view" id="service_tree_view">
			<field name="name">service.tree</field>
			<field name="model">openhealth.service</field>
			<field name="arch" type="xml">
				<tree string="Service Tree">
					<field name="name"/>
					<!--
					<field name="course_id"/>
					<field name="taken_seats" widget="progressbar"/>
					--> 
				</tree>
			</field>
		</record>


		<!-- Window action -->
		<record model="ir.actions.act_window" id="service_list_action">
			<field name="name">Servicios</field>
			<field name="res_model">openhealth.service</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>


		<!-- Menu -->
		<!--
		<menuitem id="service_menu" name="Services"
		-->
		<menuitem id="service_menu" name="Servicios"
			parent="openextension_menu"
			action="service_list_action"/>


	</data>
</openerp>
