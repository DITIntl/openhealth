<?xml version="1.0"?>
<openerp>
	<data>
		



		<!-- FORM --> 
		<record model="ir.ui.view" id="marketing_form_view">
			<field name="name">marketing.form</field>
			
			<field name="model">openhealth.marketing</field>
			
			<field name="arch" type="xml">

				<form string="Marketing Form">
					


					<!-- Header -->
					<header>



						<!-- Update -->
						<button 
								type="object" 
								class="oe_highlight"
								attrs="{'invisible':[	
														('x_type','not in',['patient']), 
											]}"
								name="update_patients"

								string="Actualizar"								
						/>



						<!-- Histo -->
						<button 
								type="object" 
								class="oe_highlight"
								attrs="{'invisible':[	
														('x_type','not in',['patient']), 
											]}"
								name="show_histogram"

								string="Actualizar Histo"								
						/>

						<!-- Correct -->
<!--						
						<button 
								type="object" 
								class="oe_highlight"
								attrs="{'invisible':[	
														('x_type','not in',['patient']), 
											]}"

								name="correct_patients"

								string="Correct Patients"								
						/>
-->


						<!-- Patients -->
						<button 
								class="oe_highlight"
								type="action" 
								attrs="{'invisible':[	
														('x_type','not in',['patient']), 
											]}"
								
								name="%(patient_line_form_action)d" 


								context="{
											'search_default_marketing_id': active_id,	
										}" 											

								string="Pacientes"	
						/>





						<!-- Histogram -->
						<button 
								class="oe_highlight"
								type="action" 
								
								name="%(histo_line_form_action)d" 

								context="{
											'search_default_marketing_id': active_id,	
										}" 											

								string="Edades"	
						/>




						<!-- Country -->
						<button 
								class="oe_highlight"
								type="action" 
								
								name="%(country_line_form_action)d" 

								context="{
											'search_default_marketing_id': active_id,	
										}" 											

								string="Paises"	
						/>

						<!-- City -->
						<button 
								class="oe_highlight"
								type="action" 
								
								name="%(city_line_form_action)d" 

								context="{
											'search_default_marketing_id': active_id,	
										}" 											

								string="Ciudades"	
						/>

						<!-- District -->
						<button 
								class="oe_highlight"
								type="action" 
								
								name="%(district_line_form_action)d" 

								context="{
											'search_default_marketing_id': active_id,	
										}" 											

								string="Distritos"	
						/>


					</header>







					<!-- Sheet -->	
					<sheet>


						<group	string="Total"	>
							<group>
								<field name="name"/>

								<field name="date_begin"/>

								<field name="date_end"/>


								<field name="write_date"	string="Actualizado"/>
							</group>

							
							<group>
								<field name="x_type"/>

								<field name="total_count"/>
							</group>


						</group>



						<!-- Sex -->
						<group	string="Sexo"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>
								<field name="sex_male"/>

								<field name="sex_female"/>

								<field name="sex_undefined"/>

							</group>

							<group>
								<field name="sex_male_per"/>
								
								<field name="sex_female_per"/>

								<field name="sex_undefined_per"/>
							</group>
						</group>



						<!-- Age -->
						<group	string="Edad"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>
								<field name="age_mean"/>
								
								<field name="age_min"/>
								
								<field name="age_max"/>

							</group>

							<group>								
<!--
								<field name="vspace"/>

								<field name="vspace"/>

								<field name="vspace"/>

								<field name="vspace"/>
-->
								<field name="age_undefined"/>

								<field name="age_undefined_per"/>
							</group>
						</group>




						<!-- First Contact -->
						<group	string="Primer Contacto"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>								
								<field name="how_none"	string="Ninguno"		/>

								<field name="how_reco"	string="Recomendación"		/>
								
								<field name="how_tv"	string="Tv"		/>
								
								<field name="how_radio"	string="Radio"		/>
								
								<field name="how_inter"	string="Internet"		/>

								<field name="how_web"	string="Web"		/>

								<field name="how_mail"	string="Mail"		/>

								<field name="how_u"		string="Indefinido"	/>
							</group>

							<group>																
								<field name="how_none_per"/>

								<field name="how_reco_per"/>
								
								<field name="how_tv_per"/>
								
								<field name="how_radio_per"/>
								
								<field name="how_inter_per"/>

								<field name="how_web_per"/>

								<field name="how_mail_per"/>

								<field name="how_u_per"/>
							</group>
						</group>






						<!-- Education -->
						<group	string="Nivel de educación"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>
								
								<field name="edu_fir"	string="Primaria"	/>

								<field name="edu_sec"	string="Secundaria"	/>
								
								<field name="edu_tec"	string="Instituto"	/>
								
								<field name="edu_uni"	string="Universidad"	/>
								
								<field name="edu_mas"	string="Posgrado"	/>

								<field name="edu_u"		string="Indefinido"	/>
							</group>

							<group>								
								
								<field name="edu_fir_per"/>

								<field name="edu_sec_per"/>
								
								<field name="edu_tec_per"/>
								
								<field name="edu_uni_per"/>
								
								<field name="edu_mas_per"/>

								<field name="edu_u_per"/>
							</group>
						</group>





						<!-- Vip -->
						<group	string="Vip"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>
								<field name="vip_true"/>
								
								<field name="vip_false"/>
							</group>

							<group>								
								<field name="vip_true_per"/>
								
								<field name="vip_false_per"/>
							</group>
						</group>





						<!-- Undefined -->
<!--
						<group	string="No definido"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>
							</group>

							<group>
							</group>
						</group>
-->



						<!-- Form -->
<!--
						<group	string=""	>
							<group>
							</group>

							<group>
							</group>
						</group>
-->





						<!-- Notebook --> 
						<notebook>	



							<!-- Patients --> 
							<page	string="Pacientes"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<field name="patient_line">

									<tree string="Pacientes"	limit="1000"	>	

										<field name="patient"/>

										<field name="sex"/>

										<field name="age_years"/>

										<field name="date_record"/>

										<field name="first_contact"/>

										<field name="education"/>

										<field name="vip"/>

										<field name="country"/>

										<field name="city"/>

										<field name="district"/>
									
									</tree>
								</field>
							</page>
<!--					                    
										<field name="dob"/>
										<field name="age"/>
										<field name="name"/>

										<field name="date_create"/>
										<field name="count"/>
-->




							<!-- Histogram --> 
							<page	string="Edades"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<field name="histo_line">

									<tree string="Histograma"	limit="1000"	>	

										<field name="idx"/>

										<field name="x_bin"/>

										<field name="count"/>

										<field name="percentage"/>

										<field name="total"/>
<!--
-->
									</tree>
								</field>
							</page>




							<!-- Countries --> 
							<page	string="Países"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<field name="country_line">

									<tree string="Pais"	limit="1000"	>	
										
										<field name="name"/>

										<field name="x_count"/>
									</tree>

								</field>
							</page>



							<!-- Cities --> 
							<page	string="Ciudades"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<field name="city_line">

									<tree string="Ciudad"	limit="1000"	>	
										
										<field name="name"/>

										<field name="x_count"/>
									</tree>
								</field>
							</page>


							<!-- Districts --> 
							<page	string="Distritos"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<field name="district_line">

									<tree string="Distrito"	limit="1000"	>	
										
										<field name="name"/>

										<field name="x_count"/>
									</tree>
								</field>
							</page>




							<!-- Undefined --> 
<!--							
							<page	string="Indefinidos"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<group>
									<field name="total_count_sex_undefined"/>
									<field name="total_count_sex_undefined_per"/>
								</group>

							</page>
-->





<!--
							<page	string="Contasis"		>
								<field name="account_line_contasis"/>
							</page>
-->


						</notebook>

					</sheet>
				</form>
			</field>
		</record>







		
		<!-- TREE --> 
		<record model="ir.ui.view" id="marketing_view_tree">

			<field name="name">openhealth.marketing.tree</field>
			
			<field name="model">openhealth.marketing</field>
			
			<field name="arch" type="xml">
<!--
				<tree string="Account Contasis Tree" default_order='date desc'>
-->
				<tree string="Marketing Tree">
					

<!--
					<field name="date"			string="Fecha"	/>
					<field name="total_amount"  attrs="{'invisible':[('x_type', '=', 'patient')]}"	   />
-->
					<field name="name"	 				/>


					<field name="write_date"	string="Actualizado"	/>


					<field name="date_begin"	string="Fecha Inicio"	/>

					<field name="date_end"		string="Fecha Fin"	/>

					<field name="x_type"/>

					<field name="total_count"/>
				</tree>
			</field>
		</record>







		<!-- ACTION - All -->
		<record model="ir.actions.act_window" id="marketing_list_action">	
			<field name="name">Todo</field>
			<field name="res_model">openhealth.marketing</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<!--
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="view_id" eval="False"/>			
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first order
				</p>
			</field>
			-->
		</record>



		<!-- ACTION - Order -->
		<record model="ir.actions.act_window" id="marketing_order_list_action">	
			<field name="name">Ventas</field>
			<field name="res_model">openhealth.marketing</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>

			<field name="domain">[
									('x_type', '=', 'order'),
								]
			</field>

			<field name="context">{
									'default_x_type': 'order',
								}
			</field>

			<!--
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="view_id" eval="False"/>			
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first order
				</p>
			</field>
			-->
		</record>




		<!-- ACTION - Patient -->
		<record model="ir.actions.act_window" id="marketing_patient_list_action">	

			<field name="name">Pacientes Nuevos Marketing</field>
			
			<field name="res_model">openhealth.marketing</field>
			<field name="view_type">form</field>
<!--
			<field name="view_mode">tree,form,graph,pivot</field>
-->
			<field name="view_mode">tree,form</field>

			<field name="domain">[
									('x_type', '=', 'patient'),
								]
			</field>


			<field name="context">{
									'default_x_type': 'patient',
								}
			</field>

			<!--
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="view_id" eval="False"/>			
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first order
				</p>
			</field>
			-->
		</record>


	</data>
</openerp>
