<?xml version="1.0"?>
<openerp>
	<data>
		



		<!-- Pivot --> 
	   <record id="view_marketing_pivot" model="ir.ui.view">

			<field name="name">marketing.pivot</field>
		
			<field name="model">openhealth.marketing</field>
		
			<field name="arch" type="xml">
		


				<pivot string="Marketing - Pacientes Nuevos" disable_linking="True"	display_quantity="False"	>
<!--
					<field name="vip_true_per" type="measure"	/>
					<field name="vip_false_per" type="measure"	/>

					<field name="date_begin" interval="month" type="row"	/>
-->



					<!-- Date --> 
					<field name="date_begin" interval="month" type="row"	/>
		


					<!-- Age --> 
					<field name="age_mean" type="measure"	/>

					<field name="age_undefined" type="measure"	/>



					<!-- Vip --> 
					<field name="vip_true" type="measure"	group="True"	/>

					<field name="vip_false" type="measure"	group="True"	/>



					<!-- Sex --> 
					<field name="sex_male" type="measure"	/>

					<field name="sex_female" type="measure"	/>

					<field name="sex_undefined" type="measure"	/>



					<!-- Education --> 
					<field name="edu_fir" type="measure"	/>

					<field name="edu_sec" type="measure"	/>

					<field name="edu_tec" type="measure"	/>

					<field name="edu_uni" type="measure"	/>

					<field name="edu_mas" type="measure"	/>

					<field name="edu_u" type="measure"	/>
 

 
					
					<!-- First --> 
					<field name="how_none" type="measure"	/>

					<field name="how_reco" type="measure"	/>

					<field name="how_tv" type="measure"	/>

					<field name="how_radio" type="measure"	/>

					<field name="how_inter" type="measure"	/>
					
					<field name="how_web" type="measure"	/>

					<field name="how_mail" type="measure"	/>

					<field name="how_u" type="measure"	/> 
 
				 </pivot>
			 </field>
		</record>





		<!-- FORM --> 
		<record model="ir.ui.view" id="marketing_form_view">
			<field name="name">marketing.form</field>
			
			<field name="model">openhealth.marketing</field>
			
			<field name="arch" type="xml">

				<form string="Marketing Form">
					


					<!-- Header -->
					<header>


						<!-- Patients -->
						<button 
								type="object" 
								class="oe_highlight"
								attrs="{'invisible':[	
														('x_type','not in',['patient']), 
											]}"
								name="update_patients"

								string="Actualizar Pacientes"								
						/>


						<!-- Histo -->
						<button 
								type="object" 
								class="oe_highlight"
								attrs="{'invisible':[	
														('x_type','not in',['patient']), 
											]}"
								name="show_histogram"

								string="Histograma"								
						/>

						<!-- Correct -->
<!--						
						<button 
								type="object" 
								class="oe_highlight"
								attrs="{'invisible':[	
														('x_type','not in',['patient']), 
											]}"

								name="correct_patients"

								string="Correct Patients"								
						/>
-->


						<!-- Registro -->
						<button 
								class="oe_highlight"
								type="action" 
								
								name="%(patient_line_form_action)d" 

								attrs="{'invisible':[	
														('x_type','not in',['patient']), 
											]}"

								context="{
											'search_default_account_id': active_id,	
										}" 											

								string="Pacientes"	
						/>







						<!-- Orders -->
						<button 
								type="object" 
								class="oe_highlight"
								attrs="{'invisible':[	
														('x_type','not in',['order']), 
											]}"
								name="update_orders"

								string="Actualizar Ventas"								
						/>




						<!-- Registro -->
						<button 
								class="oe_highlight"
								type="action" 
								name="%(account_line_list_action)d" 
								attrs="{'invisible':[	
														('x_type','not in',['order']), 
											]}"
								context="{
											'search_default_account_id': active_id,	
										}" 											

								string="Registro de Ventas"	
						/>




						<!-- Contasis -->
						<button 
								class="oe_highlight"
								type="action" 
								name="%(account_line_form_action)d"	
								attrs="{'invisible':[	
														('x_type','not in',['order']), 
											]}"
								context="{
											'search_default_account_id': active_id,	
										}" 											

								string="Contasis"								
						/>



						<!-- Tarjetas -->
						<button 
								class="oe_highlight"
								type="action" 
								attrs="{'invisible':[	
														('x_type','not in',['order']), 
											]}"
								context="{
											'search_default_account_id': active_id,	
										}"
								name="%(payment_line_form_action)d"	

								string="Tarjetas"								
						/>

					</header>







					<!-- Sheet -->	
					<sheet>


						<group	string="Total"	>
							<group>
								<field name="name"/>
<!--
								<field name="date"/>
-->
								<field name="date_begin"/>

								<field name="date_end"/>

							</group>

							
							<group>
								<field name="x_type"/>

								<field name="total_amount"	attrs="{'invisible':[('x_type', '=', 'patient')]}"		/>

								<field name="total_count"/>
							</group>


						</group>



						<!-- Sex -->
						<group	string="Sexo"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>
								<field name="sex_male"/>

								<field name="sex_female"/>

								<field name="sex_undefined"/>

							</group>

							<group>
								<field name="sex_male_per"/>
								
								<field name="sex_female_per"/>

								<field name="sex_undefined_per"/>
							</group>
						</group>



						<!-- Age -->
						<group	string="Edad"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>
								<field name="age_mean"/>
								
								<field name="age_min"/>
								
								<field name="age_max"/>
							</group>

							<group>								
								<field name="age_undefined"/>

								<field name="age_undefined_per"/>
							</group>
						</group>




						<!-- First Contact -->
						<group	string="Como se enteró ?"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>
								<field name="how_u"/>
								
								<field name="how_none"/>

								<field name="how_reco"/>
								
								<field name="how_tv"/>
								
								<field name="how_radio"/>
								
								<field name="how_inter"/>

								<field name="how_web"/>

								<field name="how_mail"/>
							</group>

							<group>								
								<field name="how_u_per"/>
								
								<field name="how_none_per"/>

								<field name="how_reco_per"/>
								
								<field name="how_tv_per"/>
								
								<field name="how_radio_per"/>
								
								<field name="how_inter_per"/>

								<field name="how_web_per"/>

								<field name="how_mail_per"/>
							</group>
						</group>






						<!-- Education -->
						<group	string="Nivel de educación"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>
								<field name="edu_u"/>
								
								<field name="edu_fir"/>

								<field name="edu_sec"/>
								
								<field name="edu_tec"/>
								
								<field name="edu_uni"/>
								
								<field name="edu_mas"/>
							</group>

							<group>								
								<field name="edu_u_per"/>
								
								<field name="edu_fir_per"/>

								<field name="edu_sec_per"/>
								
								<field name="edu_tec_per"/>
								
								<field name="edu_uni_per"/>
								
								<field name="edu_mas_per"/>
							</group>
						</group>




						<!-- Vip -->
						<group	string="Vip"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>
								<field name="vip_true"/>
								
								<field name="vip_false"/>
							</group>

							<group>								
								<field name="vip_true_per"/>
								
								<field name="vip_false_per"/>
							</group>
						</group>





						<!-- Undefined -->
<!--
						<group	string="No definido"   attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>
							<group>
							</group>

							<group>
							</group>
						</group>
-->



						<!-- Form -->
<!--
						<group	string=""	>
							<group>
							</group>

							<group>
							</group>
						</group>
-->





						<!-- Notebook --> 
						<notebook>	



							<!-- Patients --> 
							<page	string="Pacientes"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<field name="patient_line">

									<tree string="Pacientes"	limit="1000"	>	

										<field name="patient"/>

										<field name="sex"/>


<!--					                    
										<field name="dob"/>
										<field name="age"/>
										<field name="name"/>

										<field name="date_create"/>
										<field name="count"/>
-->

										<field name="age_years"/>

										<field name="date_record"/>

										<field name="first_contact"/>

										<field name="education"/>

										<field name="vip"/>



										<field name="country"/>

										<field name="city"/>

										<field name="district"/>
									
									</tree>
								</field>
							</page>




							<!-- Histogram --> 
							<page	string="Edades"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<field name="histo_line">

									<tree string="Histograma"	limit="1000"	>	

										<field name="idx"/>

										<field name="x_bin"/>

										<field name="percentage"/>
<!--
										<field name="count"/>
-->
										<field name="total"/>
									</tree>
								</field>
							</page>




							<!-- Countries --> 
							<page	string="Países"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<field name="country_line">

									<tree string="Pais"	limit="1000"	>	

									</tree>
								</field>
							</page>


							<!-- Cities --> 
							<page	string="Ciudades"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<field name="city_line">

									<tree string="Ciudad"	limit="1000"	>	

									</tree>
								</field>
							</page>


							<!-- Districts --> 
							<page	string="Distritos"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<field name="district_line">

									<tree string="Distrito"	limit="1000"	>	

									</tree>
								</field>
							</page>




							<!-- Undefined --> 
<!--							
							<page	string="Indefinidos"		attrs="{'invisible':[('x_type', '!=', 'patient')]}"	>

								<group>
									<field name="total_count_sex_undefined"/>
									<field name="total_count_sex_undefined_per"/>
								</group>

							</page>
-->





<!--
							<page	string="Ventas"		>
								<field name="account_line"/>
-->
							<page	string="Ventas"		attrs="{'invisible':[('x_type', '!=', 'order')]}"	>


								<field name="account_line">

									<tree string="Ventas"	limit="1000"	>	

										<field name="serial_nr"/>
										<field name="x_type"/>


<!--					                    
										<field name="date"/>
										<field name="date_time_corr"/>
-->				                    
										<field name="date_time"/>
										<field name="date_char"/>
										<field name="time_char"/>


										<field name="patient"/>


										<field name="qty"/>
										<field name="product"/>
										<field name="product_type"/>
										

										<field name="state"/>


										<field name="amount_net"/>
										
										<field name="amount_tax"/>

										<field name="amount"/>

<!--
										<field name="date"/>
										<field name="name"/>
										<field name="document"/>
-->

									</tree>
								</field>
							</page>
						

<!--
							<page	string="Contasis"		>
								<field name="account_line_contasis"/>
							</page>
-->


						</notebook>

					</sheet>
				</form>
			</field>
		</record>







		
		<!-- TREE --> 
		<record model="ir.ui.view" id="marketing_view_order_tree">

			<field name="name">openhealth.marketing.tree</field>
			
			<field name="model">openhealth.marketing</field>
			
			<field name="arch" type="xml">
<!--
				<tree string="Account Contasis Tree" default_order='date desc'>
-->
				<tree string="Account Contasis Tree">
					

<!--
					<field name="date"			string="Fecha"	/>
-->
					<field name="name"	 				/>

					<field name="date_begin"	string="Fecha Inicio"	/>

					<field name="date_end"		string="Fecha Fin"	/>



					<field name="x_type"/>


					<field name="total_amount"  attrs="{'invisible':[('x_type', '=', 'patient')]}"	   />



					<field name="total_count"/>


				</tree>
			</field>
		</record>







		<!-- ACTION - All -->
		<record model="ir.actions.act_window" id="marketing_list_action">	
			<field name="name">Todo</field>
			<field name="res_model">openhealth.marketing</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<!--
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="view_id" eval="False"/>			
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first order
				</p>
			</field>
			-->
		</record>



		<!-- ACTION - Order -->
		<record model="ir.actions.act_window" id="marketing_order_list_action">	
			<field name="name">Ventas</field>
			<field name="res_model">openhealth.marketing</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>

			<field name="domain">[
									('x_type', '=', 'order'),
								]
			</field>

			<field name="context">{
									'default_x_type': 'order',
								}
			</field>

			<!--
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="view_id" eval="False"/>			
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first order
				</p>
			</field>
			-->
		</record>




		<!-- ACTION - Patient -->
		<record model="ir.actions.act_window" id="marketing_patient_list_action">	

			<field name="name">Pacientes Nuevos</field>
			
			<field name="res_model">openhealth.marketing</field>
			<field name="view_type">form</field>

			<field name="view_mode">tree,form,graph,pivot</field>

			<field name="domain">[
									('x_type', '=', 'patient'),
								]
			</field>


			<field name="context">{
									'default_x_type': 'patient',
								}
			</field>

			<!--
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="view_id" eval="False"/>			
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first order
				</p>
			</field>
			-->
		</record>
	</data>
</openerp>
