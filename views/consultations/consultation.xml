					<field name="name"/>
					
					<field name="patient"  />
					

					<field name="doctor"   />
					
					
					<field name="evaluation_start_date"/>

					<field name="chief_complaint"/>
					
					
					<field name="nr_orders"/>
					
					<field name="nr_apps"/>
					
					<field name="treatment"/>



					<!--
