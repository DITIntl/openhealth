<?xml version="1.0"?>
<openerp>
	<data>


		<record model="ir.ui.view" id="service_excilite_form_view">
			<field name="name">service.excilite.form</field>
			<field name="model">openhealth.service.excilite</field>

			<field name="inherit_id" ref="service_form_view"/>
	        <field name="mode">primary</field>
			

			<field name="arch" type="xml">
				<xpath expr="//h1" position="replace">
					<h1>LÃ¡ser Excilite</h1>					
        		</xpath>				
			</field>

			
		</record>		




		<!-- service tree/list view -->
		<record model="ir.ui.view" id="service_excilite_tree_view">
			<field name="name">service.tree</field>
			<field name="model">openhealth.service.excilite</field>
			<field name="arch" type="xml">
				
				<tree string="Service Tree">
				
					<!--
					-->

					<field name="name"/>
					<field name="id"/>

					<field name="laser"/>				
					
					<field name="treatment"/>
					<!--
					<field name="zone"/>
					<field name="pathology"/>
					-->
					<field name="service"/>

					<field name="consultation"/>
				
				</tree>
			</field>
		</record>




		<!-- Window action -->
		<record model="ir.actions.act_window" id="service_excilite_list_action">
			<field name="name">Servicios Excilite</field>
			<field name="res_model">openhealth.service.excilite</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>

			<field name="context">{
									'default_laser': 'laser_excilite',
                    			}
			</field>

		</record>


		<!-- Menu -->
		<menuitem id="service_excilite_menu" name="Servicios Excilite"
			parent="openhealth_menu"
			action="service_excilite_list_action"/>


	</data>
</openerp>
