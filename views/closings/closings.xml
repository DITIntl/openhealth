<?xml version="1.0"?>
<openerp>
	<data>
		





<!-- FORM view --> 
		<record model="ir.ui.view" id="closing_form_view">

			<field name="name">closing.form</field>
			
			<field name="model">openhealth.closing</field>
			
			<field name="arch" type="xml">
				
				<form string="Clsing Form">
					



					<header>


						<button 
								type="object" 
								class="oe_highlight"


								name="update_totals"

								string="Actualizar"
								
						/>


					</header>




					<!-- Sheet -->	
					<sheet>


<!--
Fields 
-->
					<group	string="Total"	>
						<group>

		                    <field name="name"/>

		                    <field name="date"/>

<!--
-->


						</group>
						<group>
<!--							
-->
		                    <field name="total"/>

						</group>
					</group>




<!-- Form -->
					<group	string="Formas de pago"	>
						<group>
		                    <field name="cash_tot"/>
		                    <field name="ame_tot"/>
		                    <field name="din_tot"/>
		                    <field name="mac_tot"/>
		                    <field name="mad_tot"/>
		                    <field name="vic_tot"/>
		                    <field name="vid_tot"/>
						</group>

						<group>
		                    <field name="total_form"/>
<!--
		                    <field name="total_cards"/>
-->					
						</group>
					</group>




<!-- Proof -->
					<group	string="Documentos de pago"		col="2"			>

						<group>

		                    <field name="tkr_tot"/>
		                    <field name="serial_nr_first_tkr"		/>
		                    <field name="serial_nr_last_tkr"		/>

		                    <field name="vspace"/>


		                    <field name="tki_tot"/>
		                    <field name="serial_nr_first_tki"		/>
		                    <field name="serial_nr_last_tki"		/>

		                    <field name="vspace"/>



		                    <field name="rec_tot"/>
		                    <field name="serial_nr_first_rec"		/>
		                    <field name="serial_nr_last_rec"		/>


		                    <field name="vspace"/>

		                    <field name="inv_tot"/>
		                    <field name="serial_nr_first_inv"		/>
		                    <field name="serial_nr_last_inv"		/>


		                    <field name="vspace"/>



		                    <field name="adv_tot"/>
		                    <field name="serial_nr_first_adv"		/>
		                    <field name="serial_nr_last_adv"		/>

		                    <field name="vspace"/>

		                    <field name="san_tot"/>
		                    <field name="serial_nr_first_san"		/>
		                    <field name="serial_nr_last_san"		/>

		                    <field name="vspace"/>

						</group>

						<group>
		                    <field name="total_proof"/>
						</group>
					</group>







						<notebook>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>





		
