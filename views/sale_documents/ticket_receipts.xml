<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>



		<!-- FORM -->
		<record model="ir.ui.view" id="ticket_receipt_form_view">
			<field name="name">ticket_receipt.form</field>
			<field name="model">openhealth.ticket_receipt</field>


			<field name="inherit_id" ref="receipt_form_view"/>


	        <field name="mode">primary</field>
	        <field name="priority" eval="1"/>

			<field name="arch" type="xml">



				<xpath expr="//h1" position="replace">
					<h1>Ticket Boleta</h1>					
				</xpath>

<!--
				<xpath expr="//field[@name='name']" position="replace">
					<field name="name" />
				</xpath>
-->



				<xpath expr="//field[@name='name']" position="after">

					<field name="vspace" />
<!--					
-->
					<field name="serial_nr" />
				</xpath>


			</field>
		</record>










		<!-- Tree view --> 
		<record model="ir.ui.view" id="ticket_receipt_tree_view">
			<field name="name">ticket_receipt.tree</field>
			<field name="model">openhealth.ticket_receipt</field>
			<field name="arch" type="xml">
				<tree string="ticket_receipt Tree">
					
					<field name="name"/>
					
					<field name="partner"  />					
					
					<field name="total"   />
					
					<field name="order"/>

				</tree>
			</field>
		</record>





		<!-- Window List action -->
		<!--
		The following tag is an action definition for a "window action",
		that is an action opening a view or a set of views
		-->
		<record model="ir.actions.act_window" id="ticket_receipt_list_action">
			<field name="name">Boletas</field>
			<field name="res_model">openhealth.ticket_receipt</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
			
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first ticket_receipt
				</p>
			</field>
			
		</record>



	</data>
</openerp>

